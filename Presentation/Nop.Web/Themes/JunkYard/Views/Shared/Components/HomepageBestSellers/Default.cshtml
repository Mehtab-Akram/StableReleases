@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="widget">
        <h1 class="page_title">
            <strong class="title">@T("Bestsellers")</strong>
        </h1>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                        @await Html.PartialAsync("_ProductBox", item)

                       
                    </div>
            }
        </div>
    </div>
}
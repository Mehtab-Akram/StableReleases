@model NewsletterBoxModel

<div class="newsletter py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="title">
                    <strong>Get the Latest News Delivered Daily.</strong>
                    <span>
                        Give us your email and you will be daily updated with the
                        latest events, in detail.
                    </span>
                </div>
            </div>
            <div class="col-md-6">
                <form>

                <div class="form-group">
                    <input asp-for="NewsletterEmail" id="newsletter-email" class="form-control newsletter-subscribe-text" placeholder=@T("Newsletter.Email.Placeholder") />
                    @*<input type="email"
                        class="form-control"
                        name="email"
                        id="email"
                        aria-describedby="helpId"
                        placeholder="Enter your email address" />*@
                </div>
                @*<button type="submit"></button>*@
                <input type="button" value="@T(Model.AllowToUnsubscribe ? "Newsletter.Options.Send" : "Newsletter.Options.Subscribe")" id="newsletter-subscribe-button" class="button-1 newsletter-subscribe-button" />
                </form>
                @if (Model.AllowToUnsubscribe)
                {
                    <div class="options">
                        <span class="subscribe">
                            <input id="newsletter_subscribe" type="radio" value="newsletter_subscribe" name="newsletter_block" checked="checked" />
                            <label for="newsletter_subscribe">@T("Newsletter.Options.Subscribe")</label>
                        </span>
                        <span class="unsubscribe">
                            <input id="newsletter_unsubscribe" type="radio" value="newsletter_unsubscribe" name="newsletter_block" />
                            <label for="newsletter_unsubscribe">@T("Newsletter.Options.Unsubscribe")</label>
                        </span>
                    </div>
                }
                <div class="newsletter-validation">
                    <span id="subscribe-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait...")</span>
                    <span asp-validation-for="NewsletterEmail"></span>
                </div>
                <div class="clearfix"></div>
                <div class="newsletter-result" id="newsletter-result-block"></div>
            </div>
        </div>
    </div>
</div>



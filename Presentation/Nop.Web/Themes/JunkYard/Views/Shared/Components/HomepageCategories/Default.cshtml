@model IList<CategoryModel>

<div class="container">
    @if (Model.Count > 0)
    {
        <!-- 1st row -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card bg-dark text-white">
                        <img src="@item.PictureModel.ImageUrl"
                             class="card-img"
                             alt="@item.PictureModel.AlternateText" title="@item.PictureModel.Title" />
                        <div class="card-img-overlay">
                            <div class="overlay_content">
                                <h5 class="card-title">@item.Name.Replace("Parts", "")</h5>
                                <p class="card-text">Parts</p>
                                @if (item.SubCategories.Count() > 0)
                                {<ul>
                                        @foreach (var subCat in item.SubCategories)
                                        {
                                            <li><a href="@Url.RouteUrl("Category", new { SeName = subCat.Name })">@subCat.Name,</a></li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- End of 1st row -->

    }
</div>


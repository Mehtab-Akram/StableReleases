@model SocialModel
<div class="d-flex flex-row social_icon">
    @if (!string.IsNullOrEmpty(Model.FacebookLink))
    {
        <div class="social-media" id="facebook">
            <a href="@Model.FacebookLink" target="_blank">
                <i class="fab fa-facebook-f"></i>
            </a>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.TwitterLink))
    {
        <div class="social-media" id="twitter">
            <a href="@Model.TwitterLink" target="_blank">
                <i class="fab fa-twitter"></i>
            </a>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.GooglePlusLink))
    {
        <div class="social-media" id="googlePlus">
            <a href="@Model.GooglePlusLink" target="_blank">
                <i class="fab fa-google-plus-g"></i>
            </a>
        </div>
    }


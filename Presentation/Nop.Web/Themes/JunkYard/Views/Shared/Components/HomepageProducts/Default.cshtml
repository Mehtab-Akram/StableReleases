@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="widget product-grid home-page-product-grid">
        <div class="title">
            <h1 class="page_title">
                <strong>@T("HomePage.Products")</strong>

            </h1>
        </div>
        <div class="row">
            <!--item-grid -->
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}
@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <section class="py-5 similar_products_section">
        <div class="container">
            <div class="similar_products">
                <h1 class="page_title">
                    <strong class="title">@T("Products.AlsoPurchased")</strong>
                </h1>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3">
                        @await Html.PartialAsync("_ProductBox", item)
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}


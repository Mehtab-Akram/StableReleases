@model ProductDetailsModel

<div id="carousel-thumb"
     class="carousel slide carousel-fade carousel-thumbnails product_carosel"
     data-ride="carousel">
    <!--Slides-->
    @if (Model.PictureModels.Count > 1)
    {
        <div class="carousel-inner" role="listbox">
            @{
                int firstImage = 1;
                string activeClass = "";
            }
            @foreach (var picture in Model.PictureModels)
            {
                if (firstImage == 1)
                {
                    activeClass = "active";
                }
                else
                {
                    activeClass = "";
                }
                <div class="carousel-item @activeClass">
                    <img class="d-block w-100"
                         src="@picture.ImageUrl"
                         alt="@picture.AlternateText" title="@picture.Title" />
                </div>

                ++firstImage;
            }
        </div>
    }
    else
    {
                    //default no image
        <div class="carousel-item active">
            <img class="d-block w-100"
                 src="@Model.DefaultPictureModel.ImageUrl"
                 alt="@Model.DefaultPictureModel.AlternateText" title="@Model.DefaultPictureModel.Title" />
        </div>        
    }
    <!--/.Slides-->
    <!--Controls-->
    <a class="carousel-control-prev product_carosel_control"
       href="#carousel-thumb"
       role="button"
       data-slide="prev">
        <span class="carousel-control-prev-icon "
              aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next product_carosel_control"
       href="#carousel-thumb"
       role="button"
       data-slide="next">
        <span class="carousel-control-next-icon"
              aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->
    @if (Model.PictureModels.Count > 1)
                    {
        <ol class="carousel-indicators product_carosel_indicatior">
            @{
                int firstImage = 1;
                    string activeClass = "";
                }
                @foreach (var picture in Model.PictureModels)
                {
                    if (firstImage == 1)
                    {
                        activeClass = "active";
                    }
                    else
                    {
                        activeClass = "";
                    }
                <li data-target="#carousel-thumb" data-slide-to="0" class="@activeClass">
                    <img class="d-block w-100 img-fluid"
                         src="@picture.ThumbImageUrl" alt="@picture.AlternateText" title="@picture.Title" ImageUrl="@picture.ImageUrl" FullSizeImageUrl="@picture.FullSizeImageUrl" />
                </li>

                ++firstImage;
            }

        </ol>
    }
</div>
